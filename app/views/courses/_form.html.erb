<% was_validated = course.errors.any? %>

<%= form_with(model: course, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% number_class = "form-control" %>
    <% number_was_invalid = course.errors.include?(:number) %>

    <% if was_validated %>
      <% if number_was_invalid %>
        <% number_class << " is-invalid" %>
      <% else %>
        <% number_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :number %>
    <%= f.text_field :number, class: number_class, placeholder: "Enter number" %>
    <% if number_was_invalid %>
      <% course.errors.full_messages_for(:number).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = course.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% course.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% required_class = "form-control" %>
    <% required_was_invalid = course.errors.include?(:required) %>

    <% if was_validated %>
      <% if required_was_invalid %>
        <% required_class << " is-invalid" %>
      <% else %>
        <% required_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :required %>
    <%= f.text_field :required, class: required_class, placeholder: "Enter required" %>
    <% if required_was_invalid %>
      <% course.errors.full_messages_for(:required).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
