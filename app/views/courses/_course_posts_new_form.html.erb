<!-- Form post start -->
<%= form_with(model: @post, local: true) do |f| %>
<!-- Form post end -->

  <!-- Label and input for rating start -->
  <div class="form-group">
    <%= f.label :rating %>

    <!-- Input for rating start -->
    <%= f.text_field :rating, class: "form-control" %>
    <!-- Input for rating end -->
  </div>
  <!-- Label and input for rating end -->

  <!-- Label and input for descrption start -->
  <div class="form-group">
    <%= f.label :descrption %>

    <!-- Input for descrption start -->
    <%= f.text_field :descrption, class: "form-control" %>
    <!-- Input for descrption end -->
  </div>
  <!-- Label and input for descrption end -->

  <!-- Label and input for course_id start -->
  <!-- Input for course_id start -->
  <%= f.hidden_field :course_id, value: @course.id %>
  <!-- Input for course_id end -->
  <!-- Label and input for course_id end -->

  <!-- Label and input for poster_id start -->
  <div class="form-group">
    <%= f.label :poster_id %>

    <!-- Input for poster_id start -->
    <%= f.collection_select :poster_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for poster_id end -->
  </div>
  <!-- Label and input for poster_id end -->

  <!-- Label and input for professor_id start -->
  <div class="form-group">
    <%= f.label :professor_id %>

    <!-- Input for professor_id start -->
    <%= f.collection_select :professor_id, Professor.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for professor_id end -->
  </div>
  <!-- Label and input for professor_id end -->

  <%= f.submit "Create post", class: "btn btn-block btn-outline-secondary" %>
<% end %>
